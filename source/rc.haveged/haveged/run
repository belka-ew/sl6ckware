#!/bin/execlineb -P

####################################
# Start the haveged entropy daemon #
####################################

backtick -ni HAVEGED { which haveged }
export HAVEGED_OPTS "-w 1024 -v 1 -F"
multisubstitute {
  importas -u haveged HAVEGED
  importas -usd" " haveged_opts HAVEGED_OPTS
}
foreground { echo "haveged: Starting haveged entropy daemon: ${haveged}" $haveged_opts }
emptyenv $haveged $haveged_opts
