#!/bin/execlineb -P

#################################
# Start elogind (login manager) #
#################################

fdmove -c 2 1
foreground {
  if { [ ! -d /run/systemd ] }
  if { rm -f /run/systemd }
  if { mkdir -p /run/elogind }
  ln -s elogind /run/systemd
}
emptyenv -p
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
backtick BASENAME { basename -z $CMD }
importas -u BASENAME BASENAME
emptyenv -c
exec -a $BASENAME $CMD $CMD_OPTS
