######################################################
# Check all non-root filesystems found in /etc/fstab #
######################################################

ifelse { [ -r /etc/fastboot ] }
{ echo "fsck-all: Fastboot is requested. Skipping non-root filesystems checking..." }
backtick FORCEFSCK {
  if { [ -r /etc/forcefsck ] }
  printf -f
}
importas -u forcefsck FORCEFSCK
foreground { echo "fsck-all: Checking non-root filesystems..." }
fsck $forcefsck -C -R -A -a
