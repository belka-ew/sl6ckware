##################################
# Unmount all cgroup filesystems #
##################################

foreground { echo "cgroupfs: Unmounting cgroup filesystems..." }
pipeline { findmnt -nrRM /sys/fs/cgroup -o TARGET }
pipeline { tac }
forstdin -d"\n" TARGET
importas -u target TARGET
pipeline {
  fdmove -c 2 1
  umount -vl $target
}
sed "s|umount|cgroupfs|"
