#!/bin/execlineb -P

###################################
# Start the kernel logging daemon #
###################################

export KLOGD_OPTIONS "-c 3 -x"
backtick -ni KLOGD { which klogd }
multisubstitute
{
  importas -u klogd KLOGD
  importas -usd" " klogd_options KLOGD_OPTIONS
}
foreground { echo "klogd: Starting klogd: ${klogd} -n" $klogd_options }
emptyenv $klogd -n $klogd_options
