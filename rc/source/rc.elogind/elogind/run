#!/bin/execlineb -P

######################################
# Start elogind login manager daemon #
######################################

fdmove -c 2 1
foreground {
  if { [ ! -d /run/systemd ] }
  if { mkdir -p /run/elogind }
  ln -sf elogind /run/systemd
}
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
foreground { echo "Starting elogind: ${CMD}" $CMD_OPTS }
exec -c $CMD $CMD_OPTS
