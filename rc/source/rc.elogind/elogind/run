#!/bin/execlineb -P

######################################
# Start elogind login manager daemon #
######################################

fdmove -c 2 1
foreground {
  if { [ ! -d /run/systemd ] }
  if { mkdir -p /run/elogind }
  ln -sf elogind /run/systemd
}
foreground { echo "Starting elogind: /lib64/elogind/elogind" }
exec -c /lib64/elogind/elogind
