#!/bin/execlineb -P

###################################################
# Start a logging daemon for the GPM mouse server #
###################################################

# Add your user to adm group to be able to read the log files
if { mkdir -pm750 /var/log/gpmd }
if { chown adm:adm /var/log/gpmd }
s6-setuidgid adm # Drop privilege to user adm and group adm
umask 137
s6-log -bd3 -- -debug n4 s500000 T /var/log/gpmd
