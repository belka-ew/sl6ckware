######################################
# Compile GSettings XML schema files #
######################################

backtick -ni GLIB-COMPILE-SCHEMAS { which glib-compile-schemas }
importas -u glib-compile-schemas GLIB-COMPILE-SCHEMAS
foreground { echo "glib-schemas: Compiling GSettings XML schema files: ${glib-compile-schemas} /usr/share/glib-2.0/schemas" }
$glib-compile-schemas /usr/share/glib-2.0/schemas
