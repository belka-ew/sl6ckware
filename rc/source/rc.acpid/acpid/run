#!/bin/execlineb -P

#########################
# Start the ACPI daemon #
#########################

fdmove -c 2 1
ifelse { [ ! -d /proc/acpi ] }
{
  foreground { echo This system doesn't support ACPI! Aborting... }
  exit 125
}
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
foreground { echo Starting ACPI daemon: $CMD $CMD_OPTS }
exec -c $CMD $CMD_OPTS
