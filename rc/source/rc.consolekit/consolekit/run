#!/bin/execlineb -P

###############################
# Start the ConsoleKit daemon #
###############################

fdmove -c 2 1
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
foreground { echo Starting ConsoleKit daemon: $CMD $CMD_OPTS }
# Use org.freedesktop.ConsoleKit dbus address availability as readiness indicator
s6-notifyoncheck -dn0 -c "pipeline { dbus-send --system --dest=org.freedesktop.DBus \
--type=method_call --print-reply=literal /org/freedesktop/DBus \
org.freedesktop.DBus.NameHasOwner string:org.freedesktop.ConsoleKit } grep -wq true"
exec -c $CMD $CMD_OPTS
