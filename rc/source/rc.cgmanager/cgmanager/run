#!/bin/execlineb -P

###############################################
# Start the cgroup manager (cgmanager) daemon #
###############################################

fdmove -c 2 1
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
foreground { echo Starting cgmanager: $CMD $CMD_OPTS }
s6-notifyoncheck -dn0 -c "cgm ping" exec -c $CMD $CMD_OPTS
