#!/bin/execlineb -P

#############################################
# Start Postfix mail system's master daemon #
#############################################

fdmove -c 2 1
if { postfix check }
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
backtick BASENAME { basename -z $CMD }
importas -u BASENAME BASENAME
exec -ca postfix/$BASENAME $CMD $CMD_OPTS
