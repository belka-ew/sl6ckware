###################################################################
# Start HCI devices listed in /etc/default/bluetooth at boot time #
###################################################################

pipeline { grep ACTIVE_HCI_DEVICES_ON_BOOT= /etc/default/bluetooth }
pipeline { cut -f2 -d\" }
forstdin -o 0 -nd" \n" DEV
importas -u dev DEV
ifelse { [ -z $dev ] }
{
  foreground { echo "hciconfig: No HCI devices listed in /etc/default/bluetooth! Aborting..." }
  exit 1
}
hciconfig $dev up
