#################################################################
# Select the default console screen font (set by setconsolefont #
# script) from among the ones in /usr/share/kbd/consolefonts    #
#################################################################

foreground { echo "Starting oneshot service:  console-font" }
pipeline { grep setfont /etc/rc.d/rc.font }
withstdinas -n SETFONT
importas -usd" " setfont SETFONT
$setfont
