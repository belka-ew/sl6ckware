###################################################
# This service loads the loop device kernel module
###################################################

foreground { echo "Starting oneshot service:  modprobe-loop" }
foreground { modprobe -v loop }
# Check the exit status and print an error message for non-zero exit status
importas -u ? ?
ifthenelse { [ $? = 0 ] } {} { echo "(ERROR) Unable to start oneshot service:  modprobe-loop" }
exit $?
