######################################
# Load the loop device kernel module #
######################################

foreground { echo "Starting oneshot service:  module-loop" }
foreground { modprobe -v loop }
# Check the exit status and print an error message for non-zero exit status
importas -u ? ?
ifthenelse { [ $? = 0 ] } {} { echo "(ERROR) Unable to start oneshot service:  module-loop" }
exit $?
